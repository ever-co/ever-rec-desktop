{
  "$schema": "../../../../../node_modules/nx-electron/src/validation/maker.schema.json",
  "asarUnpack": [
    "../../../../../node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
    "../../../../../node_modules/ffmpeg-static/index.js",
    "../../../../../node_modules/ffmpeg-static/package.json"
  ],
  "productName": "Ever Rec Desktop",
  "appId": "co.ever.rec.desktop",
  "artifactName": "ever-rec-desktop-${version}.${ext}",
  "copyright": "Copyright Â© 2024-Present. Ever Co. LTD",
  "directories": {
    "buildResources": "apps/desktop/src/icons"
  },
  "protocols": [
    {
      "name": "Ever Rec Protocol",
      "schemes": ["ever-rec"],
      "role": "Editor"
    }
  ],
  "mac": {
    "icon": "mac/icon.icns",
    "darkModeSupport": true,
    "gatekeeperAssess": true,
    "hardenedRuntime": true,
    "category": "public.app-category.productivity",
    "entitlements": "entitlements.mac.plist",
    "entitlementsInherit": "entitlements.mac.plist",
    "extendInfo": {
      "NSMicrophoneUsageDescription": "This app requires microphone access for recording audio and detecting sound levels.",
      "NSCameraUsageDescription": "This app requires camera access for video recording and visual detection features.",
      "CFBundleURLTypes": [
        {
          "CFBundleURLName": "Ever Rec Protocol",
          "CFBundleURLSchemes": ["ever-rec"],
          "CFBundleTypeRole": "Editor"
        }
      ]
    }
  },
  "win": {
    "icon": "win/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "icon": "png",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "AudioVideo",
    "desktop": {
      "MimeType": "x-scheme-handler/ever-rec"
    }
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Ever Rec Desktop"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "ever-co",
    "repo": "ever-rec-desktop"
  }
}
