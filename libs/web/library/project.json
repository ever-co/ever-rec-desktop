{
  "name": "library",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/web/library/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/web/library/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/web/library/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/web/library/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/web/library/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
       "syncVersions": false,
        "push": true,
        "pushTags": true,
        "trackDeps": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx version library --releaseType=patch --pushTags",
          "nx build library",
          "cd dist/libs/web/library && npm publish --access public"
        ]
      }
    }
  }
}
