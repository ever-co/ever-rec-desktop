{
  "name": "shared-components",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/components/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "libs/shared/components/ng-package.json",
        "tailwindConfig": "libs/shared/components/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/shared/components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/shared/components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/shared/components/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": false,
        "push": true,
        "pushTags": true,
        "trackDeps": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "cd dist/libs/shared/components && npm publish --access public"
        ]
      },
      "dependsOn": [
        "version",
        "build"
      ],
      "parallelism": false
    }
  }
}
